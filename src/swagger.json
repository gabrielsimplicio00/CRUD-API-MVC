{
  "openapi": "3.0.1",
  "info": {
    "title": "API de cadastro de pessoas",
    "description": "API para criar e guardar informações de usuários no banco de dados.",
    "version": "0.0.1"
  },
  "externalDocs": {
    "description": "Meu portfolio",
    "url": "https://gabrielsimplicio00.github.io/portfolio/"
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "API teste de cadastro de pessoas"
    },
    {
      "url": "https://crud-api-9vkx.onrender.com",
      "description": "API de cadastro de pessoas"
    }
  ],
  "schemes": ["https", "http"],
  "paths": {
    "/pessoas": {
      "get": {
        "summary": "Busca todos os usuários no banco de dados",
        "responses": {
          "200": {
            "description": "Sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "_id": {
                        "type": "string"
                      },
                      "nome": {
                        "type": "string"
                      },
                      "sobrenome": {
                        "type": "string"
                      },
                      "idade": {
                        "type": "number"
                      },
                      "email": {
                        "type": "string"
                      },
                      "profissao": {
                        "type": "string"
                      },
                      "__v": {
                        "type": "number"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post" : {
        "summary": "Cadastro de pessoas",
        "description": "Essa rota será responsável por cadastrar usuários",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Pessoa"
              },
              "examples": {
                "pessoa": {
                  "value": {
                    "nome": "John",
                    "sobrenome": "Doe",
                    "idade": 30,
                    "email": "johndoe@example.com",
                    "profissao": "Desenvolvedor"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Ok",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "items": {
                    "$ref": "#/components/schemas/Pessoa"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/pessoas/{id}": {
      "get": {
        "summary": "Busca um usuário no banco de dados pelo ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Busca dados da pessoa pelo ID",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "_id": {
                        "type": "string"
                      },
                      "nome": {
                        "type": "string"
                      },
                      "sobrenome": {
                        "type": "string"
                      },
                      "idade": {
                        "type": "number"
                      },
                      "email": {
                        "type": "string"
                      },
                      "profissao": {
                        "type": "string"
                      },
                      "__v": {
                        "type": "number"
                      }
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Not Found"
          }
        }
      },
      "put": {
        "summary": "Altera um usuário no banco de dados pelo ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Altera dados da pessoa pelo ID",
            "required": true
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Pessoa"
              },
              "examples": {
                "pessoa": {
                  "value": {
                    "nome": "John",
                    "sobrenome": "Smith",
                    "idade": 30,
                    "email": "johnsmith@example.com",
                    "profissao": "Desenvolvedor"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Ok",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Pessoa"
                  }
                }
              }
            }
          },
          "404": {
            "description": "Not Found"
          }
        }
      },
      "delete": {
        "summary": "Deleta um usuário no banco de dados pelo ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Deleta o usuário pelo ID",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Ok"
          },
          "404": {
            "description": "Not Found"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Pessoa": {
        "type": "object",
        "properties": {
          "nome": {
            "type": "string"
          },
          "sobrenome": {
            "type": "string"
          },
          "idade": {
            "type": "number"
          },
          "email": {
            "type": "string"
          },
          "profissao": {
            "type": "string"
          }
        }
      }
    }
  }
}